---
import Layout from "../layouts/Layout.astro";
import { experiences } from "../content/experience";
---

<Layout title="About | Wally Contreras">
  <div class="page-container">
    <section class="about-hero">
      <div class="hero-grid">
        <div class="hero-image-wrapper">
          <img
            src="/wally-headshot.png"
            alt="Wally Contreras"
            class="hero-circle-img"
          />
        </div>

        <div class="hero-content">
          <span class="eyebrow">The Story</span>
          <h1 class="page-title">
            Bridging the gap between <span class="accent">strategy</span> and code.
          </h1>

          <div class="narrative-summary">
            <p>
              I’m a hybrid practitioner who thrives at the intersection of
              product strategy and technical execution. With a background
              leading roadmaps as a <strong>Product Manager</strong> at The Appraisal
              Lane and QVEST, I’ve always believed that a deep understanding of UX
              is non-negotiable—a perspective I formalized through a 6-month UX rotation
              at <strong>Google</strong>. After years of managing reporting
              infrastructure and data automation at Google, I completed a coding
              bootcamp to close the loop. Today, I use that end-to-end
              perspective to define, design, and build scalable products that
              actually solve user problems.
            </p>
          </div>

          <div class="hero-actions">
            <a href="/projects" class="cta-link primary">View My Work</a>
            <a href="/resume" class="cta-link secondary">Download Resume</a>
          </div>
        </div>
      </div>
    </section>

    <section class="experience-history">
      <h2 class="section-title">Experience</h2>
      <div class="experience-list">
        {
          experiences.map((exp) => (
            <div class="experience-row">
              <div class="exp-date">
                <span class="date-badge">{exp.date}</span>
              </div>
              <div class="exp-info">
                <h3>{exp.role}</h3>
                <p class="company">{exp.company}</p>
              </div>
              <div class="exp-desc">
                <p>{exp.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</Layout>

<style>
  .about-hero {
    padding: 10rem 0 8rem;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 320px 1fr;
    gap: 5rem;
    align-items: center; /* Keeps image and text block centered relative to each other */
  }

  .hero-circle-img {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 50%;
    object-fit: cover;
    background: var(--border-light);
    border: 1px solid var(--border-light);
  }

  .page-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 900;
    line-height: 1.1;
    margin: 0.5rem 0 2rem;
    letter-spacing: -0.03em;
    color: var(--text-main);
  }

  .accent {
    color: var(--brand-accent);
  }

  .narrative-summary p {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--text-muted);
    max-width: 42rem;
    margin: 0; /* Removing bottom margin here to control spacing via the actions container */
  }

  .narrative-summary strong {
    color: var(--text-main);
    font-weight: 700;
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
    margin-top: 3rem; /* Added clear spacing between text and buttons */
  }

  /* Experience Section Styles */
  .experience-history {
    padding-bottom: 10rem;
  }
  .section-title {
    font-size: 2rem;
    font-weight: 900;
    margin-bottom: 4rem;
  }
  .experience-row {
    display: grid;
    grid-template-columns: 2fr 4fr 6fr;
    padding: 3rem 0;
    border-top: 1px solid var(--border-light);
  }
  .date-badge {
    font-size: 10px;
    font-weight: 900;
    background: #f0eeed;
    padding: 0.5rem 0.8rem;
    border-radius: 6px;
    color: var(--text-muted);
  }
  .exp-info h3 {
    font-size: 1.25rem;
    font-weight: 900;
  }
  .company {
    color: var(--brand-accent);
    font-weight: 900;
    font-size: 11px;
    text-transform: uppercase;
    margin-top: 0.5rem;
    letter-spacing: 0.1em;
  }
  .exp-desc p {
    font-size: 1rem;
    color: var(--text-muted);
    line-height: 1.6;
  }

  @media (max-width: 992px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
      justify-items: center;
      text-align: center;
    }
    .hero-image-wrapper {
      max-width: 280px;
    }
    .hero-actions {
      justify-content: center;
    }
    .experience-row {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
