---
import type { Role } from "../../content/projects";

// Adding an interface for Props helps TypeScript understand the 'project' shape
interface Props {
  project: {
    id: string;
    image: string;
    title: string;
    description: string;
    roles: Role[]; // This ensures roles are strictly PM, UX, or DEV
  };
}

const { project } = Astro.props;

const roleLabels: Record<Role, string> = {
  PM: "Product Manager",
  UX: "UX Designer",
  DEV: "Developer",
};
---

<a href={`/projects/${project.id}`} class="project-card">
  <div class="image-wrapper">
    <img src={project.image} alt={project.title} />
  </div>

  <div class="card-content">
    <div class="badges">
      {/* Explicitly typing 'role' as 'Role' clears both errors */}
      {
        project.roles.map((role: Role) => (
          <span class:list={["badge", role.toLowerCase()]}>
            {roleLabels[role]}
          </span>
        ))
      }
    </div>

    <h3>{project.title}</h3>
    <p>{project.description}</p>
  </div>
</a>

<style>
  /* ... keep your existing styles ... */
  .project-card {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    text-decoration: none !important;
  }

  .image-wrapper {
    overflow: hidden;
    border-radius: 12px;
    aspect-ratio: 4 / 3;
    background: var(--border-light);
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }

  .project-card:hover img {
    transform: scale(1.05);
  }

  .badges {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .badge {
    padding: 0.25rem 0.6rem;
    border-radius: 4px;
    font-size: 10px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid transparent;
  }

  .badge.pm {
    background: #fff7ed;
    color: #c2410c;
    border-color: rgba(194, 65, 12, 0.1);
  }
  .badge.ux {
    background: #eff6ff;
    color: #1d4ed8;
    border-color: rgba(29, 78, 216, 0.1);
  }
  .badge.dev {
    background: #ecfdf5;
    color: #047857;
    border-color: rgba(4, 120, 87, 0.1);
  }

  h3 {
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--text-main);
    transition: color 0.3s ease;
    margin: 0;
  }

  .project-card:hover h3 {
    color: var(--brand-accent);
  }

  p {
    color: var(--text-muted);
    font-size: 1rem;
    line-height: 1.5;
  }
</style>
