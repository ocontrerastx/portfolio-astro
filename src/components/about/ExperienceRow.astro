---
// src/components/home/ExperienceRow.astro
const { exp } = Astro.props;
---

<div class="experience-row">
  <div class="date-column">
    <span class="date-badge">
      {exp.date}
    </span>
  </div>

  <div class="info-column">
    <h3 class="role-title">{exp.role}</h3>
    <p class="company-name">{exp.company}</p>
  </div>

  <div class="description-column">
    <p class="description-text">{exp.description}</p>
  </div>
</div>

<style>
  .experience-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding: 3rem 0;
    border-top: 1px solid var(--border-light);
    transition: background-color 0.2s ease;
  }

  @media (min-width: 768px) {
    .experience-row {
      grid-template-columns: repeat(12, 1fr);
      gap: 2rem;
    }
  }

  /* Hover effect on the whole row highlights the title */
  .experience-row:hover .role-title {
    color: var(--brand-accent);
  }

  .date-column {
    grid-column: span 2;
  }

  .date-badge {
    display: inline-block;
    font-size: 10px;
    font-weight: 900;
    color: var(--text-muted);
    background: var(--border-light);
    padding: 0.4rem 0.75rem;
    border-radius: 12px; /* Matches your project card preference */
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-column {
    grid-column: span 5;
  }

  .role-title {
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--text-main);
    transition: color 0.2s ease;
  }

  .company-name {
    color: var(--brand-accent);
    font-weight: 900;
    text-transform: uppercase;
    font-size: 11px;
    letter-spacing: 0.15em;
    margin-top: 0.5rem;
  }

  .description-column {
    grid-column: span 5;
  }

  .description-text {
    font-size: 0.9375rem;
    color: var(--text-muted);
    line-height: 1.6;
  }
</style>