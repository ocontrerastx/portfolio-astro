---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-container">
    
    <div class="copyright">
      Wally Contreras &copy; {currentYear}
    </div>

    <nav class="social-links">
      <a href="https://github.com/ocontrerastx" target="_blank" rel="noopener noreferrer">
        Github
      </a>
      <a href="https://www.linkedin.com/in/osvaldocontreras/" target="_blank" rel="noopener noreferrer">
        LinkedIn
      </a>
    </nav>

    <div class="status">
      <div class="indicator">
        <span class="dot"></span>
        <span class="ping"></span>
      </div>
      <span class="status-text">Available for work</span>
    </div>

  </div>
</footer>

<style>
  .site-footer {
    width: 100%;
    border-top: 1px solid var(--border-light);
    background: var(--brand-bg);
    padding: 3rem 0;
    margin-top: auto; /* Pushes footer to bottom if page is short */
  }

  .footer-container {
    max-width: 64rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .footer-container {
      flex-direction: row;
    }
  }

  /* Text & Links */
  .copyright {
    font-size: 0.875rem;
    color: var(--text-muted);
    order: 2;
  }

  @media (min-width: 768px) {
    .copyright { order: 1; }
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    order: 1;
  }

  @media (min-width: 768px) {
    .social-links { order: 2; }
  }

  .social-links a {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--text-main);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .social-links a:hover {
    color: var(--brand-accent);
  }

  /* Status Indicator */
  .status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    order: 3;
  }

  .status-text {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--text-main);
  }

  .indicator {
    position: relative;
    display: flex;
    height: 0.5rem;
    width: 0.5rem;
  }

  .dot {
    position: relative;
    display: inline-flex;
    border-radius: 9999px;
    height: 0.5rem;
    width: 0.5rem;
    background-color: #22c55e; /* Green */
  }

  .ping {
    position: absolute;
    display: inline-flex;
    height: 100%;
    width: 100%;
    border-radius: 9999px;
    background-color: #4ade80;
    opacity: 0.75;
    animation: ping-animation 1s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  @keyframes ping-animation {
    75%, 100% {
      transform: scale(2);
      opacity: 0;
    }
  }
</style>