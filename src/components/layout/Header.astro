---
// src/components/Header.astro
const { pathname } = Astro.url;

const navLinks = [
  { name: 'About', href: '/about' },
  { name: 'Projects', href: '/projects' },
  { name: 'Resume', href: '/resume' },
];

// Logo is active only on the exact root path
const isHomeActive = pathname === "/";

const isActive = (href: string) => {
  return pathname.startsWith(href);
};
---

<header class="site-header">
  <div class="header-container">
    <a href="/" class:list={['logo', { active: isHomeActive }]}>
      <div class="logo-box">WC</div>
      <span class="logo-text">Wally.Contreras</span>
    </a>

    <button id="menu-toggle" class="menu-button" aria-label="Toggle Menu">
      <div class="hamburger"></div>
    </button>

    <nav id="nav-menu" class="nav-menu">
      {navLinks.map((link) => (
        <a 
          href={link.href} 
          class:list={['nav-link', { active: isActive(link.href) }]}
        >
          {link.name}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const navMenu = document.getElementById('nav-menu');

  menuToggle?.addEventListener('click', () => {
    navMenu?.classList.toggle('is-open');
    menuToggle?.classList.toggle('is-active');
  });
</script>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    background: rgba(253, 250, 249, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #f5f5f5;
  }

  .header-container {
    max-width: 64rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* RESET: Kill standard link styles */
  a { text-decoration: none !important; }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: opacity 0.2s ease;
  }

  .logo.active .logo-text {
    color: #d75b42; /* Highlight logo text if on Home */
  }

  .logo-box {
    width: 2.25rem;
    height: 2.25rem;
    background: #d75b42;
    color: white;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 0.875rem;
  }

  .logo-text {
    font-weight: 900;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: -0.02em;
    color: #1a1a1a;
  }

  /* Navigation Links */
  .nav-menu {
    display: flex;
    gap: 2.5rem;
  }

  .nav-link {
    font-size: 13px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #1a1a1a;
    transition: color 0.2s ease;
  }

  .nav-link:hover, .nav-link.active {
    color: #d75b42;
  }

  /* MOBILE MENU STYLES */
  .menu-button {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
  }

  .hamburger {
    width: 24px;
    height: 2px;
    background: #1a1a1a;
    position: relative;
    transition: background 0.2s ease;
  }

  .hamburger::before, .hamburger::after {
    content: '';
    position: absolute;
    width: 24px;
    height: 2px;
    background: #1a1a1a;
    transition: transform 0.3s ease, top 0.3s ease;
  }

  .hamburger::before { top: -8px; }
  .hamburger::after { top: 8px; }

  @media (max-width: 768px) {
    .menu-button { display: block; }

    .nav-menu {
      position: fixed;
      top: 5rem;
      left: 0;
      width: 100%;
      height: 0; /* Collapsed by default */
      overflow: hidden;
      background: #fdfaf9;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      transition: height 0.4s ease-in-out;
    }

    .nav-menu.is-open {
      height: calc(100vh - 5rem);
      border-top: 1px solid #f5f5f5;
    }

    /* Animate Hamburger to X */
    .menu-button.is-active .hamburger { background: transparent; }
    .menu-button.is-active .hamburger::before { top: 0; transform: rotate(45deg); }
    .menu-button.is-active .hamburger::after { top: 0; transform: rotate(-45deg); }
  }
</style>