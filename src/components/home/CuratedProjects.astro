---
// src/components/home/CuratedProjects.astro
import { getCollection } from "astro:content";
import ProjectCard from "../projects/ProjectCard.astro";

// Fetch from the 'projects' collection defined in your config.ts
const allProjects = await getCollection("projects");

// Filter based on the 'featured' boolean in your Markdown frontmatter
const featuredProjects = allProjects.filter(
  (project) => project.data.featured === true,
);
---

<section class="curated-projects" transition:name="projects-section">
  <div class="page-container">
    <header class="section-header">
      <h2 class="title">Curated Projects</h2>
      <p class="subtitle">A selection of multidisciplinary solutions</p>
    </header>

    <div class="projects-grid">
      {
        featuredProjects.map((project) => (
          /* Note: We pass project.data to your existing Card component 
           or update the Card to handle the CollectionEntry type.
        */
          <ProjectCard project={project} />
        ))
      }
    </div>

    <div class="projects-actions">
      <a href="/projects" class="cta-link primary"> View All Projects </a>
    </div>
  </div>
</section>

<style>
  .curated-projects {
    padding: 6rem 0;
  }
  .section-header {
    margin-bottom: 4rem;
  }
  .title {
    font-size: 2.5rem;
    font-weight: 900;
    letter-spacing: -0.02em;
  }
  .subtitle {
    color: var(--text-muted);
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  .projects-actions {
    margin-top: 4rem;
    display: flex;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
      row-gap: 3.5rem;
    }
  }
</style>
